// Prisma schema for buyer lead intake app with two models:
// 1. buyers - id, fullName, email, phone, city, propertyType, bhk, purpose, budgetMin, budgetMax, timeline, source, status, notes, tags, ownerId, updatedAt
// 2. buyer_history - id, buyerId, changedBy, changedAt, diff (JSON)


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or "sqlite"
  url      = env("DATABASE_URL")
}

model Buyer {
  id            String        @id @default(uuid())
  fullName      String        @db.VarChar(80)
  email         String?       @unique
  phone         String        @db.VarChar(15)
  city          City
  propertyType  PropertyType
  bhk           BHK?
  purpose       Purpose
  budgetMin     Int?
  budgetMax     Int?
  timeline      Timeline
  source        Source
  status        Status      @default(New)
  notes         String?     @db.Text
  tags          String[]
  ownerId       String
  updatedAt     DateTime    @updatedAt
  histories     BuyerHistory[]
  
  @@index([ownerId])
}

model BuyerHistory {
  id         String    @id @default(uuid())
  buyerId    String
  changedBy  String
  changedAt  DateTime  @default(now())
  diff       Json
  buyer      Buyer     @relation(fields: [buyerId], references: [id], onDelete: Cascade)

  @@index([buyerId])
}

enum City {
  Chandigarh
  Mohali
  Zirakpur
  Panchkula
  Other
}

enum PropertyType {
  Apartment
  Villa
  Plot
  Office
  Retail
}

enum BHK {
  "1"
  "2"
  "3"
  "4"
  Studio
}

enum Purpose {
  Buy
  Rent
}

enum Timeline {
  "0-3m"
  "3-6m"
  ">6m"
  Exploring
}

enum Source {
  Website
  Referral
  Walkin
  Call
  Other
}

enum Status {
  New
  Qualified
  Contacted
  Visited
  Negotiation
  Converted
  Dropped
}
